{
  "name": "mimo-team-backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/server.js",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --exit-child --ignore-watch dist --ignore-watch uploads src/server.ts",
    "build": "rimraf dist && tsc",
    "start": "cross-env NODE_ENV=production node --enable-source-maps dist/server.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "health": "curl -sf http://localhost:4000/health && echo OK || (echo FAIL && exit 1)",
    "bench:users": "autocannon -c 10 -d 20 'http://localhost:4000/users?page=1&pageSize=20'",
    "db:indexes": "ts-node scripts/sync-indexes.ts",
    "db:admin": "ts-node scripts/upsert-admin.ts"
  },
  "dependencies": {
    "@simplewebauthn/browser": "^13.2.0",
    "@simplewebauthn/server": "^13.2.1",
    "@simplewebauthn/types": "^12.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-list-endpoints": "^7.1.1",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "response-time": "^2.3.4",
    "sharp": "^0.34.3",
    "socket.io-client": "^4.8.1",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "@types/response-time": "^2.3.9",
    "autocannon": "^8.0.0",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
